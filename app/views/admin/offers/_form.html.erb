<% if @offer.errors.any? %>
  <div class="alert alert-danger">
    <h4 class="alert-heading"><%= pluralize(@offer.errors.count, "error") %>:</h4>
    <hr>
    <ul>
      <% @offer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: [:admin, @offer], local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :url %>
    <%= f.url_field :url, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :starts_at %>
    <%= f.datetime_field :starts_at, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :ends_at %>
    <%= f.datetime_field :ends_at, class: 'form-control' %>
  </div>
  <div class="form-group form-check">
    <%= f.check_box :premium, class: 'form-check-input' %>
    <%= f.label :premium %>
  </div>
  <div>
    <%= link_to 'Cancel', :back, class: 'btn btn-secondary' %>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>