<h1>
  Offers
  <%= link_to 'New Offer', new_admin_offer_path, class: 'btn btn-primary btn-sm' %>
</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>URL</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% unless @offers.present? %>
      <tr>
        <td colspan="5">No offers found</td>
      </tr>
    <% end %>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.id %></td>
        <td><%= offer.name %></td>
        <td><%= offer.url %></td>
        <td><%= offer.status %></td>
        <td>
          <%= link_to 'Edit', edit_admin_offer_path(offer), class: 'btn btn-secondary' %>
          <%= link_to (offer.force_disabled) ? 'Enable' : 'Disable', admin_offer_toggle_status_path(offer), method: 'put', class: 'btn btn-secondary' %>
          <%= link_to 'Destroy', admin_offer_path(offer), method: 'delete', data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>